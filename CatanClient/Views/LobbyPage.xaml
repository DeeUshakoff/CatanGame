<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatanMAUI.Views.LobbyPage"
             Title="LobbyPage">
    <VerticalStackLayout Spacing="10" Padding="0,25">
        <Label 
            Text="Lobby"
            FontSize="36"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout Spacing="10" VerticalOptions="Center" 
            HorizontalOptions="Center" >
            <Label 
            Text="key"
            FontSize="16"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
          
            <Button x:Name="Copy_Button" Clicked="Copy_Button_Clicked" IsEnabled="False" Text="copy"/>
        </HorizontalStackLayout>

        <VerticalStackLayout x:Name="PlayerList_ListView" VerticalOptions="Center" Spacing="10"
            HorizontalOptions="Center">
            
        </VerticalStackLayout>
        <Label 
            Text="waiting for players"
            FontSize="16"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="Quit_Button" Clicked="Quit_Button_Clicked" MaximumWidthRequest="200" Text="Quit"></Button>
    </VerticalStackLayout>
</ContentPage>